.postmessage {
  height: 100vh;
  background-color: #fff;
  padding: 10rpx 35rpx 0;
}
.postmessage .title {
  display: flex;
  justify-content: space-between;
  font-size: medium;
}
.postmessage .title .back {
  font-size: 50rpx;
  position: relative;
  top: -15rpx;
  left: -20rpx;
  font-weight: 100;
}
.postmessage .title .content {
  font-weight: 500;
}
.postmessage .title .sendmessage {
  color: darkorange;
}
.postmessage textarea {
  height: 300rpx;
}
.postmessage .wrapper .picwrapper {
  padding: 10rpx;
  float: left;
  position: relative;
}
.postmessage .wrapper .picwrapper image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.postmessage .wrapper .picwrapper .deleteBtm {
  width: 40rpx;
  height: 40rpx;
  background-color: #000;
  opacity: 0.55;
  color: #fff;
  border-radius: 50%;
  text-align: center;
  line-height: 35rpx;
  position: absolute;
  font-weight: 100;
  top: 15rpx;
  right: 15rpx;
  font-size: larger;
}
.postmessage .wrapper .picwrapper .picselect {
  padding: 10rpx;
  float: left;
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #d3c7ff;
  font-size: 200rpx;
  line-height: 200rpx;
  text-align: center;
  color: #d3c7ff;
  border-radius: 10rpx;
}
.postmessage .wrapper .picwrapper .picselect .addd {
  position: relative;
  top: -30rpx;
}
