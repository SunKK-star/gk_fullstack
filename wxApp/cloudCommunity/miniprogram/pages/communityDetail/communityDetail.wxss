.communttyDetail .namedetail {
  display: flex;
  align-items: center;
  padding: 15rpx 40rpx;
  height: 150rpx;
  background-color: #3f9fd9;
}
.communttyDetail .namedetail .avatar {
  margin-right: 30rpx;
  margin-top: 5rpx;
}
.communttyDetail .namedetail .avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.communttyDetail .namedetail .content .title {
  color: #fff;
  font-weight: 650;
  font-size: larger;
  margin-bottom: 10rpx;
}
.communttyDetail .namedetail .content .attend_detail {
  color: #fff;
  font-size: smaller;
  margin-top: 10rpx;
}
.communttyDetail .namedetail .content .attend_detail text:nth-child(1) {
  margin-right: 40rpx;
}
.communttyDetail .namedetail .attendBtn {
  position: relative;
  right: -150rpx;
}
.communttyDetail .namedetail .attendBtn .van-button__text {
  color: #323A3A;
}
.communttyDetail .subjoin {
  width: 100%;
  height: 60rpx;
  background-color: #3f9fd9;
  margin-bottom: 90rpx;
  position: relative;
}
.communttyDetail .subjoin .bulletin {
  position: absolute;
  width: 90%;
  height: 120rpx;
  border-radius: 10rpx;
  background-color: #fff;
  top: 0rpx;
  left: 35rpx;
  display: flex;
  flex-direction: column;
  padding: 0 50rpx;
}
.communttyDetail .subjoin .bulletin .bulletindetail {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: small;
}
.communttyDetail .subjoin .bulletin .bulletindetail .h1 {
  flex: 0 0 100rpx;
  color: #3f9fd9;
}
.communttyDetail .subjoin .bulletin .bulletindetail .h2 {
  flex: 1;
  color: #333333;
}
.communttyDetail .subjoin .bulletin .bulletindetail:nth-child(1) {
  border-bottom: 1px #f5f5ff solid;
}
.communttyDetail .showtab {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1px #f5f5ff solid;
  display: flex;
  align-items: center;
  padding-left: 30rpx;
}
.communttyDetail .showtab .all {
  font-size: large;
  font-weight: 600;
  margin-right: 50rpx;
}
.communttyDetail .showtab .jinghua {
  font-size: small;
}
.communttyDetail .filtrite {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
  font-size: smaller;
  color: #555555;
  background-color: #fff;
}
.communttyDetail .container {
  overflow: hidden;
  padding: 30rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}
.communttyDetail .container .userinfo {
  display: flex;
}
.communttyDetail .container .userinfo .userinfo_avatar image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.communttyDetail .container .userinfo .userinfoDetail {
  margin-left: 20rpx;
}
.communttyDetail .container .userinfo .userinfoDetail .userinfoDetail_name {
  font-weight: 750;
  font-size: medium;
}
.communttyDetail .container .userinfo .userinfoDetail .userinfoDetail_minute {
  font-size: smaller;
  color: #9a9a9a;
}
.communttyDetail .container .container_title {
  margin-top: 5rpx;
}
.communttyDetail .container .container_content {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}
.communttyDetail .container .picture {
  padding: 10rpx 15rpx 0 0;
  float: left;
}
.communttyDetail .container .picture image {
  width: 300rpx;
  border-radius: 10rpx;
}
.communttyDetail .container .picture .morethenOne {
  width: 200rpx;
  height: 200rpx;
}
.communttyDetail .postBtn {
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: cornflowerblue;
}
.communttyDetail .postBtn .add {
  font-size: 100rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
