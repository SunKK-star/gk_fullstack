.my {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
.my .my_top {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  padding: 25rpx 25rpx;
  display: flex;
  align-items: center;
}
.my .my_top .avatar {
  margin-right: 15rpx;
}
.my .my_top .avatar .wrapper {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.my .my_top .top-content .name {
  font-size: large;
  font-weight: 600;
}
.my .my_top .top-content .attention {
  display: inline-block;
  font-size: 22rpx;
  color: #515152;
  margin-right: 25rpx;
}
.my .my_top .top-content .fans {
  display: inline-block;
  color: #515152;
  font-size: 22rpx;
}
.my .getUserInfoBtn {
  display: flex;
  width: 100%;
  height: 100rpx;
  padding: 20rpx 20rpx;
}
.my .getUserInfoBtn .unknowimg {
  flex: 0 0 100rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.my .getUserInfoBtn button {
  flex: 1;
  height: 100rpx;
  width: 100rpx;
  background-color: #fff;
  color: #515152;
  font-weight: 600;
}
.my .my-middle {
  width: 100%;
  height: 150rpx;
  background-color: #fff;
  display: flex;
  padding: 35rpx 0;
}
.my .my-middle .middle_content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.my .my-middle .middle_content .counts {
  font-size: 32rpx;
  font-weight: 600;
}
.my .my-middle .middle_content .another {
  color: #515152;
  font-size: 22rpx;
}
