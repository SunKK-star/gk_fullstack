.invset-bg {
  position: relative;
  width: 100%;
  height: 370rpx;
  background-color: #fb464c;
  overflow: hidden;
}
.invset-bg::after {
  position: absolute;
  content: '';
  width: 0;
  height: 0;
  border-bottom: 108rpx solid transparent;
  border-top: 108rpx solid #fb464c;
  border-left: 375rpx solid transparent;
  border-right: 375rpx solid transparent;
  bottom: -216rpx;
}
.wrapper {
  width: 80%;
  height: 45%;
  margin: 42rpx auto 0;
}
.h1 {
  font-size: 30rpx;
