/* components/problem/problem.wxss */
.container {
  width: 92%;
  height: 485rpx;
  margin: 0 auto 30rpx;
  background-color: #ffffff;
  border-radius: 20rpx;
}
.container-title {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  height: 85rpx;
}
.container-title::after {
  content: '';
  position: absolute;
  width: 90%;
  height: 100%;
  left: 30rpx;
  border-bottom: 1rpx solid #b7b7b7;
}
.h1 {
  font-size: 35rpx;
  font-weight: bolder;
  font-family: sans-serif;
  margin-left: 34rpx;
}
.h2 {
  display: flex;
  align-items: center;
  margin-right: 34rpx;
}
.txt {
  color: #b7b7b7;
}
.content {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 400rpx;
}
.wrapper {
  display: flex;
  flex-direction: column;
  width: 90%;
  height: 350rpx;
}
.item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex: 20%;
}
.circle {
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
  background-color: #f3f7fe;
  color: #818dd0;
  text-align: center;
  line-height: 45rpx;
}
.item-l {
  display: flex;
}
.p {
  font-size: 30rpx;
  margin-left: 25rpx;
}